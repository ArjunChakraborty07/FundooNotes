package com.bridgelabz.fundoo.exception;

public class ExceptionMessage extends RuntimeException{

	private static final long serialVersionUID = 1L;
	private String message;

	public ExceptionMessage(String userMessage) {
		super(userMessage);
		this.message = message;
	}

	public ExceptionMessage() {
		
		// TODO Auto-generated constructor stub
	}

	public ExceptionMessage(String message, Throwable cause, boolean enableSuppression, boolean writableStackTrace) {
		super(message, cause, enableSuppression, writableStackTrace);
		// TODO Auto-generated constructor stub
	}

	public ExceptionMessage(String message, Throwable cause) {
		super(message, cause);
		// TODO Auto-generated constructor stub
	}

	public ExceptionMessage(Throwable cause) {
		super(cause);
		// TODO Auto-generated constructor stub
	}
	
}