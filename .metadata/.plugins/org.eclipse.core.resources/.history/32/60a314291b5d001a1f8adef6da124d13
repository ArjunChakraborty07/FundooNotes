package com.bridgelabz.fundoo.repository;


import javax.persistence.EntityManager;
import javax.transaction.Transactional;

import org.hibernate.Session;
import org.hibernate.query.Query;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.bridgelabz.fundoo.entity.NotesEntity;
import com.bridgelabz.fundoo.entity.UserEntity;

@Repository
public class NotesRepository {

	@Autowired
	private EntityManager entityManager;
	
	String email="email";
	String query="From UserEntity where email_id=:";
	
	@Transactional
	public void save(NotesEntity notesEntity) 
	{		
		Session session = entityManager.unwrap(Session.class);
		session.saveOrUpdate(notesEntity);			
	}
	public void update(NotesEntity notesEntity)
	{
		Session session = entityManager.unwrap(Session.class);
		Query q=session.createQuery(query+email);
		q.setParameter(email, notesEntity.get());
		if((UserEntity)q.uniqueResult()==null)
		{				
			session.saveOrUpdate(notesEntity);
			
		}
		
		
	}
	

	
}
